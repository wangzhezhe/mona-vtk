#!/bin/bash
#SBATCH --qos=debug
#SBATCH --nodes=32
#SBATCH --time=10:00
#SBATCH --licenses=cscratch1
#SBATCH --constraint=haswell

BUILDDIR=/global/cscratch1/sd/zw241/build_monavtk
SRCDIR=/global/homes/z/zw241/cworkspace/src/mona-vtk
SCRIPTPATH=$SRCDIR/example/MandelbulbColza/pipeline/mbrender_64_iso.py
CONFIG=$SRCDIR/example/MandelbulbColza/pipeline/monaconfig.json


STEP=6
PROTOCOL=gni
SSGFILE=ssgfile
BACKENDNAME=monabackend
BLOCKLENW=64
BLOCKLENH=64
BLOCKLEND=64

BLOCKNUM=2048

SERVERNODE=16
SERVERPROCESS=64

CLIENTNODE=16
CLIENTPROCESS=64

# run this in the build dir of the monavtk
cd $BUILDDIR

# copy script into current path
cp $SCRIPTPATH .

export ABT_THREAD_STACKSIZE=2097152
export LD_LIBRARY_PATH=/global/common/sw/cray-sles15-x86_64/gcc-8.2.0/mesa-18.3.6-qozjngg/lib:$LD_LIBRARY_PATH

# 1 nodes for server (16*4=64=2*32)
srun -C haswell -N $SERVERNODE -n $SERVERPROCESS -c 8 -l --cpu_bind=cores colza-dist-server -a $PROTOCOL -s $SSGFILE -c $CONFIG -t 1 &> mbserver_mona_$SERVERPROCESS.log &

#make sure the server load the pipeline
result=0
while [ $result -ne $SERVERPROCESS ]
do
    result=$(cat mbserver_mona_"$SERVERPROCESS".log | grep "Server running at" | wc -l)
    echo "$result server loaded backend"
    sleep 1  
done

# 16 nodes for client, 16*32=512, 512*8=4096 (maybe get this from the env, 2 hyperthread for one physical core)
srun -C haswell -N $CLIENTNODE -n $CLIENTPROCESS -c 8 -l --cpu_bind=cores ./example/MandelbulbColza/mbclient -a $PROTOCOL -s $SSGFILE -p $BACKENDNAME -b $BLOCKNUM -t $STEP -w $BLOCKLENW -d $BLOCKLEND -e $BLOCKLENH &> mbclient_mona_${SERVERPROCESS}_${CLIENTPROCESS}.log

